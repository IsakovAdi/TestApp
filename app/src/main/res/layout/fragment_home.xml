<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.HomeFragment">

    <ImageButton
        android:id="@+id/funnel_btn"
        android:layout_width="@dimen/size56"
        android:layout_height="@dimen/size56"
        android:layout_marginTop="@dimen/margin32"
        android:layout_marginEnd="@dimen/margin16"
        android:background="@drawable/rounded_bg"
        android:src="@drawable/icon_funnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchView"
        android:layout_width="@dimen/size0"
        android:layout_height="@dimen/size0"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin8"
        android:background="@drawable/search_view_bg"
        android:drawableStart="@drawable/icon_search"
        android:hint="@string/searchBarHint"
        android:paddingStart="@dimen/margin16"
        app:layout_constraintBottom_toBottomOf="@id/funnel_btn"
        app:layout_constraintEnd_toStartOf="@id/funnel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/funnel_btn" />

    <ImageView
        android:id="@+id/icon_up_down"
        android:layout_width="@dimen/size16"
        android:layout_height="@dimen/size16"
        android:src="@drawable/icon_arrow_down_up"
        app:layout_constraintBottom_toBottomOf="@id/sort_tv"
        app:layout_constraintEnd_toEndOf="@id/funnel_btn"
        app:layout_constraintTop_toTopOf="@id/sort_tv" />

    <TextView
        android:id="@+id/sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin4"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/sorting_text"
        android:textColor="@color/greenColor"
        android:textFontWeight="500"
        app:layout_constraintEnd_toStartOf="@id/icon_up_down"
        app:layout_constraintTop_toBottomOf="@id/funnel_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courses_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0"
        android:layout_marginTop="@dimen/margin16"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort_tv"
        tools:listitem="@layout/course_item" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/greenColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>