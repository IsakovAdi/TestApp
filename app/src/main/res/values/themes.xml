<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.TestApp" parent="Base.Theme.TestApp" />

    <style name="regularTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="hugeTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/textSize28sp</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:layout_width">@dimen/size0</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:textSize">@dimen/textSize14sp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin16</item>
        <item name="android:background">@drawable/input_text_bg</item>
        <item name="android:paddingStart">@dimen/margin16</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/greenColor</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>